{% block body %}
<!DOCTYPE html>
<html class="no-js" lang="zxx">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Job Hidden</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
<style>
    html, body {
        width: 100%;
        height:100%;
      }
      
      body {
          background: linear-gradient(-45deg, #1a1013, #5a555b, #9eacb6, #e7f3f6);
          background-size: 400% 400%;
          animation: gradient 15s ease infinite;
      }
      
      @keyframes gradient {
          0% {
              background-position: 0% 50%;
          }
          50% {
              background-position: 100% 50%;
          }
          100% {
              background-position: 0% 50%;
          }
      }
</style>
  <body class="flex items-center justify-center h-screen bg-gray-100">
        {{form_start(form)}}
        <div class="max-w-md mx-auto border border-gray-300 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 rounded-lg">
            <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
              <div class="mb-4">
                <label class="block text-gray-500 text-sm font-bold mb-2">Titre</label>
                {{form_row(form.title,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
              <div class="mb-4">
                <label class="block text-gray-500 text-sm font-bold mb-2">Ville</label>
                {{form_row(form.location,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
              <div class="mb-4">
                <label class="block text-gray-500 text-sm font-bold mb-2">Adresse</label>
                {{form_row(form.adress,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
              <div class="mb-4">
                <label class="block text-gray-500 text-sm font-bold mb-2">Salaire</label>
                {{form_row(form.wages,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
              <div class="mb-4">
                <label class="block text-gray-500 text-sm font-bold mb-2">Heures par semaine</label>
                {{form_row(form.workingTime,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
              <div class="mb-4">
                <label class="block text-gray-500 text-sm font-bold mb-2">Type de contract</label>
                {{form_row(form.contract,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
           
              <div class="mb-6">
                <label class="block text-gray-500 text-sm font-bold mb-2">Description</label>
                {{form_row(form.description,{'attr':{'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}
              </div>
              <div class="flex items-center justify-between">
                <button type="submit" class="custom-button bg-green-400 hover:bg-green-300 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring focus:border-green-400 w-full">Post</button>
                {{form_end(form)}}
              </div>
            </form>
          </div>        
        
</body>
{% endblock %}