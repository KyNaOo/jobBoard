{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
    <h1 class="text-3xl font-bold">User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{{ user.birth ? user.birth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                {% if user.gender == 1 %}
                <td>Homme</td>
                {% else %}
                {% if user.gender == 2 %}
                <td> Femme </td>
                {% else %}
                <td> Autre </td>
                {% endif %}
                {% endif %}
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="inline-block bg-blue-500 hover:bg-red-400 text-black font-bold py-2 px-4 rounded mr-2 ml-2">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-block bg-blue-500 hover:bg-red-400 text-black font-bold py-2 px-4 rounded mr-2">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
