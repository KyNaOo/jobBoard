{% extends 'base.html.twig' %}

{% block title %}Advertisement index{% endblock %}

{% block body %}
<head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
    <h1 class="text-3xl font-bold">Advertisements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Location</th>
                <th>Adress</th>
                <th>Wages</th>
                <th>Offerer</th>
                <th>actions</th>
                <th>Contract</th>
            </tr>
        </thead>
        <tbody>
        {% for advertisement in advertisements %}
            <tr>
                <td>{{ advertisement.title }}</td>
                <td>{{ advertisement.location }}</td>
                <td>{{ advertisement.adress }}</td>
                <td>{{ advertisement.wages }}</td>
                <td>{{ advertisement.userId }}</td>
                <td>{{ advertisement.contract}}</td>
                <td>
                    <a href="{{ path('app_advertisement_show', {'id': advertisement.id}) }}" class="inline-block bg-blue-500 hover:bg-red-400 text-black font-bold py-2 px-4 rounded mr-2">show</a>
                    <a href="{{ path('app_advertisement_edit', {'id': advertisement.id}) }}" class="inline-block bg-blue-500 hover:bg-red-400 text-black font-bold py-2 px-4 rounded mr-2">edit</a>
                    <a class="inline-block">{%include 'advertisement/_delete_form.html.twig'%}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_advertisement_new') }}"class="inline-block bg-green-500 hover:bg-red-400 font-bold rounded mr-2 px-2 py-3 mb-2 ml-2">Create new</a>
    <a href="{{ path('app_admin') }}"class="inline-block bg-green-500 hover:bg-red-400 font-bold rounded mr-2 px-2 py-3 mb-2 ml-2">Back to home</a>
{% endblock %}
