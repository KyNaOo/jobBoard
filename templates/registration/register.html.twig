{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
  body {
    background: #d7daed;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }
    .custom-input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box; /* Ensure padding and border are included in the width */
        text-align: left; /* Ensure text is aligned to the left */
      }
      
      .custom-button {
        width: 100%;
        padding: 12px;
        background-color: #ff656c;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        text-align: center; /* Center-align the button text */
      }
      
      .registration-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 10px;
      }     
</style>
  <div class="registration-form">
    <h1>Register</h1>
    <form method="post">
      {{ form_start(registrationForm) }}
      {{ form_row(registrationForm.email, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.firstName, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.lastName, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.birth, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.gender, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.phone, {'attr': {'class': 'custom-input'}}) }}
      {{ form_row(registrationForm.city, {'attr': {'class': 'custom-input'}}) }}
      <button type="submit" class="custom-button">Register</button>
      {{ form_end(registrationForm) }}
    </form>
  </div>
{% endblock %}
